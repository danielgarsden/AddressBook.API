@page "/addressdetails/{Addressid}"

<h1 class="page-title">Detail for @Address.FirstName @Address.LastName</h1>

<div class="col-12 row">
    <div class="col-10 row">
        <div class="col-xs-12 col-sm-8">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Address ID</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Address.AddressId</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">First name</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Address.FirstName</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Last name</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Address.LastName</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Address Line 1</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Address.AddressLine1</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Address Line 2</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Address.AddressLine2</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Address Line 3</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Address.AddressLine3</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">City</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Address.City</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Post Code</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Address.PostCode</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Land line Number</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Address.LandLineNumber</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Mobile Number</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Address.MobileNumber</label>
                </div>
            </div>
        </div>
    </div>
</div>
